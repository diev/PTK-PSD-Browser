<Window x:Class="PTK_PSD_Browser.Views.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PTK_PSD_Browser"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel LastChildFill="False">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="E_xit"/>
            </MenuItem>
            <MenuItem Header="_Tools"/>
        </Menu>
        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar>
                <ComboBox Width="120">
                    <ComboBoxItem Content="Все Формы"/>
                </ComboBox>
            </ToolBar>
            <ToolBar>
                <Button Content="Обновить"/>
                <ToggleButton Content="Сегодня"/>
                <ToggleButton Content="Вчера"/>
                <ToggleButton Content="За неделю"/>
            </ToolBar>
            <ToolBar>
                <DatePicker/>
                <DatePicker/>
            </ToolBar>
        </ToolBarTray>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem Content="Status"/>
            <ProgressBar Height="10" Width="100"/>
        </StatusBar>
    </DockPanel>
</Window>
